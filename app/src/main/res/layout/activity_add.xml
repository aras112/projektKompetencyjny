<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".AddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tapeCollectionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:autofillHints=""
                android:ems="10"
                android:hint="@string/name"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/addNewCollection"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/ok" />

        </LinearLayout>

        <FrameLayout
            android:id="@+id/front"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:background="@mipmap/blackboard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/textFront"
                style="@style/Base.Theme.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:autofillHints=""
                android:contentDescription="@string/tape"
                android:ems="10"
                android:hint="@string/tape"
                android:inputType="textPersonName"
                android:lineSpacingExtra="10sp"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/reverse"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:background="@mipmap/blackboard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/textReserve"
                style="@style/Base.Theme.AppCompat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ems="10"
                android:hint="@string/tapeReverse"
                android:inputType="textPersonName"
                android:lineSpacingExtra="10sp"
                android:textColor="@color/colorAccent"
                android:textSize="30sp" />

        </FrameLayout>

        <ImageButton
            android:id="@+id/addNew"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/descriptoinButton1"
            app:srcCompat="@android:drawable/ic_input_add" />

        <TextView
            android:id="@+id/count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="30sp"
            android:text="dodano 23 fiszki"
            android:textColor="@color/colorAccent"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif"
            app:fontFamily="sans-serif" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>